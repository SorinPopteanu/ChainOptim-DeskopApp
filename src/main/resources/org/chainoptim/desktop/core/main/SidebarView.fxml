<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.chainoptim.desktop.core.main.controller.SidebarController"
            fx:id="sidebar"
            styleClass="sidebar">

    <HBox fx:id="dashboardHBox" alignment="CENTER_LEFT" spacing="10" styleClass="sidebar-title-container">
        <Button fx:id="backButton" styleClass="sidebar-button"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label text="Dashboard" styleClass="sidebar-title" HBox.hgrow="ALWAYS"/>
        <Pane HBox.hgrow="ALWAYS" minWidth="4"/>
        <Button fx:id="toggleButton" styleClass="sidebar-button"/>
    </HBox>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" styleClass="sidebar-scrollpane">
        <VBox fx:id="buttonContainer" styleClass="sidebar-inner-container">
            <!-- Navigation buttons -->
        </VBox>
    </ScrollPane>

    <Region VBox.vgrow="ALWAYS"/>

    <VBox fx:id="bottomContainer" alignment="BOTTOM_LEFT" styleClass="sidebar-inner-container">
        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="sidebar-button"/>
    </VBox>

</VBox>
