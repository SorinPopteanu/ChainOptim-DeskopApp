<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<GridPane fx:controller="org.chainoptim.desktop.core.user.controller.AuthController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="15" right="25" bottom="25" left="25"/></padding>

    <Label fx:id="formTitle" text="Login" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <!-- Username Label and TextField -->
    <Label fx:id="usernameLabel" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <!-- Password Label and PasswordField -->
    <Label fx:id="passwordLabel" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <!-- Button and Hyperlink Container -->
    <HBox spacing="10" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
        <Button text="Login" onAction="#handleLogin" HBox.hgrow="ALWAYS" style="-fx-background-color: #7892B2; -fx-text-fill: white;"/>
        <Hyperlink text="Sign up" onAction="#handleShowSignUp"/>
    </HBox>

</GridPane>
