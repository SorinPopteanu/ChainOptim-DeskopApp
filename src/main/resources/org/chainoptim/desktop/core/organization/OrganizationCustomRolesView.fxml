<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.chainoptim.desktop.core.organization.controller.OrganizationCustomRolesController"
            prefHeight="800">

    <VBox spacing="10">
        <HBox styleClass="tab-title-container" spacing="10">
            <Label fx:id="tabTitle" styleClass="tab-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="deleteRoleButton"/>
            <Button fx:id="addNewRoleButton"/>
        </HBox>

        <ScrollPane VBox.vgrow="ALWAYS" style="-fx-background-color: white">
            <GridPane fx:id="customRolesPane" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: white; -fx-padding: 0px 20px;"/>
        </ScrollPane>
    </VBox>

    <StackPane fx:id="confirmUpdateDialogContainer" style="-fx-padding: 64px"/>
    <StackPane fx:id="confirmDeleteDialogContainer" style="-fx-padding: 64px"/>
</StackPane>
