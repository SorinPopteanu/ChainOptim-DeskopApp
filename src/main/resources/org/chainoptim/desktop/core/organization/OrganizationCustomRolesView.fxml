<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.chainoptim.desktop.core.organization.controller.OrganizationCustomRolesController"
           styleClass="organization-content-container"
           prefHeight="600" prefWidth="800">

    <VBox spacing="10">
        <HBox style="-fx-padding: 10px;">
            <Label fx:id="tabTitle" styleClass="tab-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addNewRoleButton"/>
        </HBox>

        <ScrollPane VBox.vgrow="ALWAYS" style="-fx-background-color: white">
            <GridPane fx:id="customRolesPane" VBox.vgrow="ALWAYS" style="-fx-background-color: white"/>
        </ScrollPane>
    </VBox>

    <StackPane fx:id="confirmDialogContainer" style="-fx-padding: 64px"/>
</StackPane>
