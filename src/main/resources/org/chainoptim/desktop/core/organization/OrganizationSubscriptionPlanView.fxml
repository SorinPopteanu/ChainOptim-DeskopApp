<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.chainoptim.desktop.core.organization.controller.OrganizationSubscriptionPlanController"
      spacing="10">

    <HBox styleClass="tab-title-container" spacing="10" alignment="CENTER">
        <Label fx:id="tabTitle" styleClass="tab-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="changePlanButton"/>
    </HBox>

    <ScrollPane VBox.vgrow="ALWAYS" style="-fx-background-color: white">
        <GridPane fx:id="planGridPane" VBox.vgrow="ALWAYS" styleClass="grid-pane-container"/>
    </ScrollPane>

</VBox>
