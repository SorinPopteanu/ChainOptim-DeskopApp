<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.ScrollPane?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.chainoptim.desktop.core.overview.controller.TimelineController" spacing="20">

    <HBox alignment="CENTER">
        <Label text="Upcoming Events" styleClass="general-label-large"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="refreshButton" text="Refresh" onAction="#refreshEvents" styleClass="standard-action-button"/>
    </HBox>

    <ScrollPane minHeight="90">
        <HBox fx:id="eventsHBox"/>
    </ScrollPane>


</VBox>
