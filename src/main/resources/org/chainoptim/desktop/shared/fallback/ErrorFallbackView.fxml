<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.chainoptim.desktop.shared.fallback.ErrorFallbackController">

    <VBox alignment="TOP_CENTER" styleClass="fallback-container">
        <Text text="Something Went Wrong" styleClass="fallback-title"/>
        <ImageView fx:id="errorImage"/>
        <Text text="Oops! It seems like an unexpected error occurred while processing your request."
              styleClass="fallback-text"/>
    </VBox>

</StackPane>
