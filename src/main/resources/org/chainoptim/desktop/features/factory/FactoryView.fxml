<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.chainoptim.desktop.features.factory.controller.FactoryController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="16" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" styleClass="entity-header-container">
        <HBox alignment="CENTER_LEFT" spacing="40">
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Label fx:id="factoryName" styleClass="entity-page-title"/>
                <Label fx:id="factoryLocation" styleClass="entity-page-description"/>
            </VBox>
            <Button text="Edit Factory" onAction="#handleEditFactory" styleClass="standard-write-button"/>
        </HBox>
        <MenuBar>
            <Menu text="Overview"/>
            <Menu text="Production"/>
            <Menu text="Inventory"/>
            <Menu text="Performance"/>
        </MenuBar>
        <Region styleClass="header-bottom-border"/>
    </VBox>

    <StackPane fx:id="graphContainer"/>

    <StackPane fx:id="fallbackContainer"/>
</AnchorPane>
