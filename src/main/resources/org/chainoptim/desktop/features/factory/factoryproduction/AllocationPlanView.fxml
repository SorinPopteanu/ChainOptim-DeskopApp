<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.chainoptim.desktop.features.factory.controller.factoryproduction.AllocationPlanController"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Allocation Plan" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 16px;"/>

    <Label text="Allocations"/>
    <TableView fx:id="tableView" styleClass="table-view">
        <columns>
            <TableColumn text="Allocated Amount" fx:id="allocatedAmountColumn"/>
            <TableColumn text="Requested Amount" fx:id="requestedAmountColumn"/>
        </columns>
    </TableView>
</VBox>
